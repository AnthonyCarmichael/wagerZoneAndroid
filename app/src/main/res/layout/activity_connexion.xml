<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/connexion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnexionActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#700E0E"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Connexion"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/userIcone"
            android:layout_width="79dp"
            android:layout_height="61dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/user"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@drawable/rounded_corner"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/rougeFonce">

        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="home"
            android:textSize="11sp"
            android:padding="0dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginVertical="10dp"
            android:radius="10dp"
            android:background="@color/rougeFonce"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/equipes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="equipes"
            android:textSize="11sp"
            android:layout_marginVertical="10dp"
            android:padding="0dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/rougeFonce"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/matchs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Matchs"
            android:textSize="11sp"
            android:layout_marginVertical="10dp"
            android:padding="0dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/rougeFonce"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/paris"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Mes paris"
            android:textSize="11sp"
            android:layout_marginVertical="10dp"
            android:padding="0dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/rougeFonce"
            android:textColor="@color/white"

            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>